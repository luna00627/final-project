    </div>
    <script>
        const foodData = JSON.parse('<%- JSON.stringify(foodData) %>');
        console.log("foodData:", foodData);//
        // 顯示三個套餐
        let display = "";
        for (let i = 0; i < foodData.length; i++) {
            const selectedMeal = foodData[i];
            console.log("selectedMeal:", selectedMeal);//
            // 顯示所選套餐
            display += "<h4>套餐 " + (i + 1) + "：</h4>";
            display += "<p>主食：" + selectedMeal['主食'] + "</p>";
            display += "<p>蛋白質：" + selectedMeal['蛋白質'] + "</p>";
            display += "<p>蔬菜：" + selectedMeal['蔬菜'] + "</p>";
            display += "<p>水果：" + selectedMeal['水果'] + "</p>";
            display += "<p>熱量：" + selectedMeal['熱量'] + "</p>";
            display += "<hr>";
            console.log("Generated HTML for meal", i + 1, ":", display);
        }
        document.querySelector('.content').innerHTML = display;
        //document.querySelector('.content').innerHTML = display;
    </script>
